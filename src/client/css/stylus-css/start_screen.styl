// Colors
deep_sky_blue = #26ADE4
white = #fff
crimson = #FE4365
// Start screen styles
.start_screen_content
  position relative
  width 100vw
  height 100vh
  text-align center
  overflow-x hidden
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0.5)), color-stop(100%,rgba(0,0,0,0.5))), url('a.jpg') repeat 0 0;
  background-size: 100vw;

// Detect screen size and apply correct background image size
@media(max-width 411px)
  .start_screen_content
    background-size: 100vw 100vh;

.start_screen_content .page-title
  width 100vw
  height 25vh
  margin-bottom 35px

.start_screen_content button
  position absolute
  margin auto
  top 0
  bottom 10%
  left 0
  right 0
  width 200px
  height 50px
  border none
  border-radius 5px
  background-color crimson
  color white
  font-weight bold
  font-size 20px

.suggest_login
  position absolute
  bottom 5%
  width 100vw

.suggest_login .redirect_to_login
  font-weight bold
  font-size 25px
  width 200px
  height 50px
  border none
  border-radius 5px
  background-color deep_sky_blue
  color white
  font-weight bold
  font-size 20px
  line-height 50px
  margin 0 auto
  margin-top 10px
