// main: main.styl, compress: true, sourcemap:false
box_size = 90px

.register_content h2
  text-align center
  font-weight bold
  margin-top 20px

.register_content
  width 100vw
  height 100vh

#authenticationReg
  margin 0 auto
  margin-top 35px

#signUpForm
  display inline-block
  text-align center
  border-radius: 6px

.reg
  margin 3vh 4vh
  width 74vw
  height 7vh
  border solid 1px #C9D8EA
  border-radius 8px
  padding-left 3vw
  line-height 7vh

.register-button
  margin 4vh 4vh
  width 77vw
  height 8vh
  border solid 1px #C9D8EA
  border-radius 8px
  background-color #3B5998
  color #FFFFFF
  font-size 22px
  text-align center
  line-height 8vh

.register_content .footer_container
  width 318px
  height 100px
  margin 0 auto
  margin-top 30px

.register_content .footer_container .footer
  display inline-block
  font-weight bold

.register_content .footer_container .progress
  position absolute
  float left
  width 100px
  height 30px
  font-weight bold
  font-size 18px
  bottom 2px
