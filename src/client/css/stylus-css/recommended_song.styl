.more_info_content
  display none
  position absolute
  bottom 0px
  z-index 5
  background-color #f9f9f9
  min-width 100%
  height 80px
  text-align center
  line-height 0.75
  box-shadow 0px 8px 16px 0px rgba(0,0,0,0,2)

.more_info_content a
  color black
  padding 12px 16px
  text-decoration none
  font-size: 20px
  font-family Georgia
  display block

.more_info_content a:hover
  background-color #f1f1f1

.show
  display block


// Footer where the explore and my music buttons are
.bottom_bar
  font-family Arial, sans-serif
  position absolute
  width 100vw
  height 55px
  bottom 0
  div
    display inline-block
  button
    background-color #F06B50
    float left
    width 50vw
    height 100%
    border none
    border-left 1px solid black
    border-right 1px solid black
    font-size 20px
    font-weight bold
  .explore
    background-color #FAF537
  .my_music
    background-color #FC473E
