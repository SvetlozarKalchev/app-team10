// main: main.styl, compress: true, sourcemap:false
.back img
  position absolute
  top 20px
  left 20px
  width 50px
  height 50px

.user_info_content
  position absolute
  top 20%
  left 18%
  width 230px
  height 300px
  text-align center
  border 2px solid #FFFFFF
  border-radius 25px
  padding 20px

.user_info_content img
  position relative
  top 0
  left 0
  right 0
  bottom 0
  width 70px
  height 70px

.user_name
  font-family Georgia
  font-size 24px

.change_password
  display none

.show
  display block

.user_info_content button
  position relative
  top 10px
  width 70px
  height 30px
  border-radius 5px
  border none
  background-color #26ADE4
  color white
  font-weight bold
  font-size 16px
