// main: main.styl, compress: true, sourcemap:false
deep_sky_blue = #26ADE4
white = #fff

.margin-element
  width 100vw
  height 100px

.search_content
  position absolute
  top 0
  width 100vw
  height 80px
  background-color deep_sky_blue
  z-index 100000

// Drop down menu container
.drop_down
  position absolute
  left 0px
  top 20px
  height 50px
  width 50px

.menu_icon
  position relative
  left 25px
  top 5px
  width 40px
  height 32px

.drop_down_content
  display none
  position absolute
  width 100vw
  top 60px
  z-index 5
  background-color #f9f9f9
  text-align center
  box-shadow 0px 8px 16px 0px rgba(0,0,0,0,2)

.drop_down_content a
  display block
  padding 12px 16px
  color black
  text-decoration none
  font-size: 22px

.drop_down_content a:hover
  background-color #f1f1f1

.show
  display block

.search_content input
  position relative
  width 200px
  height 40px
  top 17px
  left 80px
  border-radius 7px
  text-align center


// Styles for the icons on the right corner of the search bar
.menu_bar_icons
  width 110px
  height 100%
  float right
  margin-right 20px
  text-align center
  line-height 110px

icon_size = 40px

.playlist_icon
  position relative
  width icon_size
  height icon_size
  margin-right 20px
.user_icon
  position relative
  width icon_size
  height icon_size

.song_list_content
  width 100%
  height auto
  div
    display inline-block


// Styles for each song element displayed

.music_box
  font-family "Oswald", sans-serif
  width 90%
  height 70px
  margin-left 5%
  margin-bottom 2px
  background-color #F7F7F7
  border-bottom 2px solid #fff
  color black

.music_info
  float left
  position relative
  top 0px
  left 5px
  margin auto
  width 65%
  height 75px
  // .artist
  //   font-style italic

// Styles for the song elements
song_element_icons_size = 30px
.icons
  float right
  height 100%
  margin-right 15px
  line-height 90px
  .heart_icon
    width song_element_icons_size
    height song_element_icons_size
    margin-right 10px
  .more_info_icon
    width song_element_icons_size
    height song_element_icons_size

.song_name
  position relative
  padding-left 10px
  bottom 20px
  font-size 18px
  height 70px
  padding-top 15px
  line-height 24px
