// main: main.styl, compress: true, sourcemap:false
deep_sky_blue = #26ADE4
white = #fff

// recommended song style
.search_content
  height 80px
  background-color deep_sky_blue

.drop_down
  position absolute
  left 0px
  top 20px
  display inline-block

.menu_icon
  position relative
  left 5px
  top 10px
  width 18px
  height 20px

.drop_down_content
  display none
  position absolute
  top 60px
  z-index 5
  background-color #f9f9f9
  min-width 160px
  box-shadow 0px 8px 16px 0px rgba(0,0,0,0,2)

.drop_down_content a
  color black
  padding 12px 16px
  text-decoration none
  font-size: 18px
  display block

.drop_down_content a:hover
  background-color #f1f1f1

.show
  display block

.playlist_icon
  position relative
  left 120px
  top 20px
  width 80px
  height 30px

.search_content input
  float left
  left 30px
  top 20px
  width 200px
  height 40px
  border-radius: 7px

.user_icon
  position relative
  left 80px
  top: 20px
  width 25px
  height 30px

.song_list_content
