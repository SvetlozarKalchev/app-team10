// main: main.styl, compress: true, sourcemap:false
deep_sky_blue = #26ADE4
white = #fff

.margin-element
  width 100vw
  height 90px

.search_content
  position absolute
  top 0
  width 100vw
  height 80px
  background-color deep_sky_blue
  z-index 100000

// Drop down menu container
.drop_down
  position absolute
  left 0px
  top 20px
  height 50px
  width 50px

.menu_icon
  position relative
  left 10px
  top 5px
  width 40px
  height 32px

.drop_down_content
  display none
  position absolute
  top 60px
  z-index 5
  background-color #f9f9f9
  width 250px
  box-shadow 0px 8px 16px 0px rgba(0,0,0,0,2)

.drop_down_content a
  color black
  padding 12px 16px
  text-decoration none
  font-size: 20px
  display block

.drop_down_content a:hover
  background-color #f1f1f1

.show
  display block

.search_content input
  position relative
  width 200px
  height 40px
  top 17px
  left 80px
  border-radius 7px
  text-align center

// Styles for the icons on the right corner of the search bar
.menu_bar_icons
  position absolute
  margin 0
  right 10px
  top 22px
  bottom 0

.playlist_icon
  position relative
  width 35px
  height 35px
  margin-right 15px

.user_icon
  position relative
  width 35px
  height 35px

.song_list_content
  width 100%
  height 800px
  div
    display inline-block
  hr
    align center
    color #FFFFFF
    size 1px
    width 360px

.play_all_icon
  width 30px
  height 30px
  position relative
  top 5px
  left 15px

.play_all
  position absolute
  top 75px
  left 50px
  font-size 18px
  font-family Georgia
  color #FFFFFF

.music_box
  width 100%
  height 70px
  hr
    align center
    color #FFFFFF
    size 1px
    width 360px

.music_info
  float left
  position relative
  top 0px
  bottom 10px
  left 15px
  margin auto
  width 50%
  height 50px
  line-height 0.75

// Icons in the song element
.icons
  position relative
  float right
  right 15px
  height 70px
  top 10px

.song_name
  position relative
  bottom 5px
  left 10px
  font-size 20px

.artist
  position relative
  bottom 10px
  left 10px
  font-size 15px

.heart_icon
  position relative
  width 30px
  height 30px
  bottom 8px

.more_info_icon
  position relative
  width 45px
  height 45px

.more_info_content
  display none
  position absolute
  bottom 0px
  z-index 5
  background-color #f9f9f9
  min-width 100%
  height 80px
  text-align center
  line-height 0.75
  box-shadow 0px 8px 16px 0px rgba(0,0,0,0,2)

.more_info_content a
  color black
  padding 12px 16px
  text-decoration none
  font-size: 20px
  font-family Georgia
  display block

.more_info_content a:hover
  background-color #f1f1f1

.show
  display block


// Footer where the explore and my music buttons are
.bottom_bar
  position absolute
  width 100vw
  height 70px
  bottom 0

.bottom_bar div
  display inline-block

.explore_button_container
  position absolute
  left 0
  bottom 40px
  width 50vw
  height 70px

.explore_button_container button
  height 70px
  background-color transparent
  font-size 25px
  color #FFFFFF
  width 99%

.explore_icon
  position relative
  top 55px
  left 10px
  width 35px
  height 35px

.my_music_button_container
  position absolute
  right 0
  width 50vw
  height 70px

.my_music_button_container button
  position relative
  width 99%
  height 70px
  background-color transparent
  font-size 25px
  color #FFFFFF

.mymusic_icon
  position absolute
  top 22px
  left 8px
  width 30px
  height 30px
