// main: main.styl, compress: true, sourcemap:false
box_size = 90px

.login_content
  width 100vw
  height 100vh
  overflow-x hidden

.login_content h2
  text-align center
  font-weight bold

#authentication
  margin 0 auto
  margin-top 35px
  text-align center

.log
  margin 4vh
  width 74vw
  height 8vh
  border solid 1px #C9D8EA
  border-radius 8px
  padding-left 3vw
  line-height 8vh

.login-button
  margin 4vh 4vh
  width 77vw
  height 8vh
  border solid 1px #C9D8EA
  border-radius 8px
  background-color #3B5998
  color #FFFFFF
  font-size 22px
  text-align center
  line-height 8vh

.login_content .footer_container
  width 318px
  height 100px
  margin 0 auto
  margin-top 30px

.login_content .footer_container .footer
  display inline-block
  font-weight bold

.login_content .footer_container .progress
  position absolute
  float left
  width 100px
  height 30px
  font-weight bold
  font-size 18px
  bottom 2px
