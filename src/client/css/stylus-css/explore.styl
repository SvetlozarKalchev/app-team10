// main: main.styl, compress: true, sourcemap:false
.search_content
  height 80px
  background-color deep_sky_blue

.drop_down
  position absolute
  left 0px
  top 20px
  display inline-block

.menu_icon
  position relative
  left 5px
  top 10px
  width 18px
  height 20px

.drop_down_content
  display none
  position absolute
  top 60px
  z-index 5
  background-color #f9f9f9
  min-width 160px
  box-shadow 0px 8px 16px 0px rgba(0,0,0,0,2)

.drop_down_content a
  color black
  padding 12px 16px
  text-decoration none
  font-size: 18px
  display block

.drop_down_content a:hover
  background-color #f1f1f1

.show
  display block

.search_content input
  position relative
  left 20px
  top 20px

.playlist_icon
  position relative
  left 120px
  top 20px
  width 80px
  height 30px

.user_icon
  position relative
  left 80px
  top: 20px
  width 25px
  height 30px

.music_recommendation_content
  width 100%
  height 800px

.musiclist_icon
  position relative
  left 30px
  top 30px
  width 100px
  height: 100px

.loading
  width 100%
  position absolute
  bottom 70px

.loading p
  text-align center
  color:#ABB2B9
  padding:0px

.loading_bar
  display block
  margin: auto
  position relative
  bottom 5px
  width 20px
  height 10px

.bottom_bar
  position absolute
  bottom: 0
  orientation horizontal

.recommend_icon
  position absolute
  left 5px
  top 18px
  width 28px
  height 30px

.mymusic_icon
  position absolute
  left 218px
  top 18px
  width 30px
  height 30px

.recommend
  position relative
  left: 0
  width 203px
  height 70px
  background-color transparent
  font-size 25px
  color #FFFFFF

.my_music
  position relative
  left 0
  width 203px
  height 70px
  background-color transparent
  font-size 25px
  color #FFFFFF
