  text-align: center
  padding-top 1vh
  border solid 1px #C9D8EA
  border-radius: 8px
  margin 6vh 25vw

.register_content .footer_container
  width 318px
  height 100px
  margin 0 auto
  margin-top 30px

.register_content .footer_container .footer
  display inline-block
  font-weight bold

.register_content .footer_container .progress
  position relative
  float left
  width 100px
  height 30px
  font-weight bold
  font-size 18px
  bottom 2px

.register_content .footer_container .next
  float right
  width 120px
  height 50px
