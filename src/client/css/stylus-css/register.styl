.register_content h2
  text-align center
  font-weight bold
  margin-top 20px

.register_content
  width 100vw
  height 100vh


.register .footer_container .footer
  display inline-block
  font-weight bold

#authenticationReg
  margin 10vh 5vw 6vh 5vw


#register
  display inline-block
  border solid 1px #C9D8EA
  border-radius: 6px

.reg
  margin: 3vh 4vh
  width: 74 vw
  height: 7vh
  border solid 1px #C9D8EA
  border-radius: 8px
  padding-left:3vw

.submitBtn
    margin: 4vh 4vh
    width: 77 vw
    height: 8vh
    border solid 1px #C9D8EA
    border-radius: 8px
